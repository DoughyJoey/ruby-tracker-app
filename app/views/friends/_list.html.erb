<%-# lists all the friends the current user is following -%>
<div class="row">
  <div class="col-9">  
    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>
      <%-# iterates through each friend the user is tracking -%>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.email %></td>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <%-# button to view a friends profile -%>
            <td><%= link_to 'View Profile', user_path(friend),
                            class: 'btn btn-sm btn-info' %>
            <%-# button used to unfollow a friend -%>
              <%= link_to 'Unfollow', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'},
                            class: 'btn btn-sm btn-warning' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>