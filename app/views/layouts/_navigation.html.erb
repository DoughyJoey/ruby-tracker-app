<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <%-# sets logo as a link to the root path (homepage) -%>
        <%= link_to 'Tracker App', root_path, class: 'navbar-brand' %>
        <%-# navigation is only displayed when the user is signed in -%>
        <% if current_user %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                <%-# creates link to My Portfolio page -%>
                <%-# is only active when we are on that page -%>
                    <li class="nav-item <%= 'active' if request.path == my_portfolio_path %>">
                        <%= link_to 'My Stocks', my_portfolio_path, class: 'nav-link' %>
                    </li>
                <%-# creates link to My Friends page -%>
                <%-# is only active when we are on that page -%>
                    <li class="nav-item <%= 'active' if request.path == my_friends_path %>">
                        <%= link_to 'My Friends', my_friends_path, class: 'nav-link' %>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Crypto
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <%-# link to the crypto news page -%>
                        <%= link_to crypto_news_path, class: 'dropdown-item' do %>
                            <%= fa_icon 'info' %> News
                        <% end %>
                        <%-# link to the crypto price page -%>
                        <%= link_to crypto_price_path, class: 'dropdown-item' do %>
                            <%= fa_icon 'money' %> Price
                        <% end %>
                        </div>
                    </li>



                    
                <%-# dropdown item for profile -%>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Profile
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <%-# link to the edit profile page -%>
                        <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
                            <%= fa_icon 'edit' %> Edit profile
                        <% end %>

                        <%= link_to inquiries_path, class: 'dropdown-item' do %>
                            <%= fa_icon 'pencil' %> Inquiries
                        <% end %>
                        </div>
                    </li>
                </ul>

                <%-# displays the users full name -%>
                <ul class='navbar-nav ml-auto'>
                    <li class='nav-item user-name'>
                        <%= fa_icon 'user' %> <%= current_user.full_name %>
                    </li>                
                    <li class='nav-item'>
                    <%-# logout using delete method -%>
                        <%= link_to("Logout", destroy_user_session_path,
                                    class: "btn btn-danger logout-button", method: :delete) %>
                    </li>
                </ul>
            </div>
        <% end %>
    </div>
</nav>