<%= form_with(model: inquiry, local: true) do |form| %>
<%# form error handling %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
        <% inquiry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%# first name input field %>
  <div class="form-group">
    <%= form.label :firstname %>
    <%= form.text_field :firstname, autofocus: true, autocomplete: 'firstname', class: 'form-control' %>
  </div>

<%# last name input field %>
  <div class="form-group">
    <%= form.label :lastname %>
    <%= form.text_field :lastname, autofocus: true, autocomplete: 'lastname', class: 'form-control' %>
  </div>

<%# email input field %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

<%# message input field %>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, autofocus: true, autocomplete: 'message', class: 'form-control' %>
  </div>

  <br/>

  <%# optional extras for query %>
  <%# implemented using decorator design pattern %>
  <h6>Please select an option below that best matches your query</h6>

  <%# stock radio button %>
  <div class="form-group form-check form-check-inline">
      <div class="rb-spacing">
        Stock:
        <%= check_box_tag 'inquiry[stock]', 'stock' %>
      </div>

      <%# crypto radio button %>
      <div class="rb-spacing">
        Crypto:
        <%= check_box_tag 'inquiry[crypto]', 'crypto' %>
      </div>

      <%# other radio button %>
      <div class="rb-spacing">
        Other:
      <%= check_box_tag 'inquiry[other]', 'other' %>
    </div>
  </div>

  <%# submit button %>
  <div class="actions">
    <%= form.submit nil, class: 'btn btn-success' %>
  </div>

<% end %>
<br/>
